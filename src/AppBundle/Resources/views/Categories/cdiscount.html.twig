{% extends '@App/base.html.twig' %}

{% block content %}
    <link rel="stylesheet" href="bundles/sbsadminlte/plugins/select2/dist/css/select2.min.css">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Data Table With Full Features</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Libelle</th>
                    <th>WP Categorie</th>
                    <th>Valid</th>
                </tr>
                </thead>
                <tbody>
                {% for catCdiscount in catsCdiscount %}
                    <tr>
                        <form method="POST">
                        <td>{{ catCdiscount.id }}</td>
                        <td>{{ catCdiscount.libelle }}</td>
                        <td>
                            <select class="form-control select2" style="width: 100%;">
                                {% for key, catWp in catsWp %}
                                    <option value="{{ key }}">{{ catWp.parent }}{{ catWp.name }}</option>
                                {% endfor %}
                            </select>
                        </td>
                        <td></td>
                        </form>
                    </tr>

                {% endfor %}
                </tbody>
                <tfoot>
                <tr>
                    <th>#</th>
                    <th>Libelle</th>
                    <th>WP Categorie</th>
                    <th>Valid</th>
                </tr>
                </tfoot>
            </table>
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->

    <script src="bundles/sbsadminlte/plugins/select2/dist/js/select2.full.min.js"></script>
    <script>
        $(function () {
            //Initialize Select2 Elements
            $('.select2').select2();
        })
    </script>
{% endblock %}